<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Activities.Activities.Add_new">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:layout_constraintTop_toTopOf="parent"
       >
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <LinearLayout
               android:id="@+id/ln"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:orientation="vertical"
               android:gravity="right"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@+id/logo"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:text="@string/place"
                   android:fontFamily="@font/saudi"
                   android:textSize="16dp"
                   android:drawableRight="@drawable/ic_location"
                   android:textColor="@color/text_grey"
                   />
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginBottom="10dp"
                  >
                  <Button
                      android:layout_width="wrap_content"
                      android:minWidth="100dp"
                      android:layout_height="40dp"
                      app:layout_constraintTop_toBottomOf="@+id/logo"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:text="@string/um"
                      android:background="@drawable/bk_btn_take_img"
                      android:fontFamily="@font/saudi"
                      android:textSize="16dp"
                      android:paddingLeft="10dp"
                      android:drawableLeft="@drawable/ic_down"
                      android:textColor="@color/text_grey"
                      android:entries="@array/places"
                      android:layoutDirection="rtl"
                      android:layout_marginRight="10dp"
                      android:id="@+id/municipality_sp"/>
                  <Button
                      android:layout_width="wrap_content"
                      android:minWidth="100dp"
                      android:layout_height="40dp"
                      app:layout_constraintTop_toBottomOf="@+id/logo"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:text="@string/governomont"
                      android:fontFamily="@font/saudi"
                      android:textSize="16dp"
                      android:drawableLeft="@drawable/ic_down"
                      android:background="@drawable/bk_btn_take_img"
                      android:paddingLeft="10dp"
                      android:textColor="@color/text_grey"
                      android:entries="@array/places"
                      android:layoutDirection="rtl"
                      android:layout_marginRight="10dp"
                      android:id="@+id/governomo_sp"/>
              </LinearLayout>
           </LinearLayout>

           <ImageView
               android:id="@+id/back_btn"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:padding="20dp"

               android:layout_marginTop="10dp"
               android:src="@drawable/ic_back_black"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toTopOf="parent" />
           <RadioGroup
               android:id="@+id/RG"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3"

               app:layout_constraintTop_toBottomOf="@+id/back_btn">
               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/appartment"
                   android:fontFamily="@font/saudi"
                   android:textColor="@color/text_grey"
                   android:textSize="14dp"
                   android:layoutDirection="rtl"
                   android:id="@+id/appartement"
                   android:gravity="center"
                   android:layout_weight="1"/>
               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/filla"
                   android:fontFamily="@font/saudi"
                   android:textColor="@color/text_grey"
                   android:textSize="14dp"
                   android:layoutDirection="rtl"
                   android:id="@+id/filla"
                   android:gravity="center"
                   android:layout_weight="1"/>

               <RadioButton

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/earth_check"
                   android:fontFamily="@font/saudi"
                   android:textColor="@color/text_grey"
                   android:textSize="14dp"
                   android:layoutDirection="rtl"
                   android:id="@+id/earth"
                   android:gravity="center"
                   android:layout_weight="1"/>
           </RadioGroup>
           <LinearLayout
               android:visibility="gone"

               android:id="@+id/info"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               app:layout_constraintTop_toBottomOf="@+id/RG"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:weightSum="2"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView

                           android:fontFamily="@font/saudi"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="end"
                           android:layout_marginTop="24dp"
                           android:text="@string/room"
                           android:textColor="@color/text_grey"
                           android:textSize="14dp" />

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           >
                           <TextView
                               android:gravity="center"
                               android:id="@+id/room_nb"

                               android:fontFamily="@font/saudi"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="end"

                               android:text="00"
                               android:textColor="@color/bk_red"
                               android:paddingBottom="3dp"
                               android:textSize="14dp" />
                           <SeekBar
                               android:max="12"

                               android:id="@+id/seek_bar_room"
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:paddingLeft="0dp"
                               android:paddingRight="0dp"/>



                       </LinearLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:id="@+id/tx5_tv"
                           android:fontFamily="@font/saudi"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="end"
                           android:layout_marginTop="24dp"
                           android:text="@string/bath"
                           android:textColor="@color/text_grey"
                           android:textSize="14dp" />

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           >
                           <TextView
                               android:gravity="center"
android:id="@+id/bath_nb"
                               android:fontFamily="@font/saudi"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="end"

                               android:text="00"
                               android:textColor="@color/bk_red"
                               android:paddingBottom="3dp"
                               android:textSize="14dp" />
                           <SeekBar
                               android:max="12"

                               android:id="@+id/seek_bar_bath"
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:paddingLeft="0dp"
                               android:paddingRight="0dp"/>



                       </LinearLayout>

                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:weightSum="2"
                   android:gravity="right"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView

                           android:fontFamily="@font/saudi"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="end"

                           android:text="@string/earth"
                           android:textColor="@color/text_grey"
                           android:textSize="14dp" />

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           >
                           <TextView
                               android:gravity="center"
                               android:id="@+id/earth_nb"

                               android:fontFamily="@font/saudi"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="end"

                               android:text="00 "
                               android:textColor="@color/bk_red"
                               android:paddingBottom="3dp"
                               android:textSize="14dp" />
                           <TextView
                               android:gravity="center"


                               android:fontFamily="@font/saudi"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="end"


                               android:text=" m2"
                               android:textColor="@color/bk_red"
                               android:paddingBottom="3dp"
                               android:textSize="14dp" />
                           <SeekBar
                               android:id="@+id/seek_bar_earth"
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:paddingLeft="0dp"
                               android:paddingRight="0dp"
                               android:max="1000"
                               />



                       </LinearLayout>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView

                           android:fontFamily="@font/saudi"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="end"

                           android:text="@string/bulding"
                           android:textColor="@color/text_grey"
                           android:textSize="14dp" />

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           >
                           <TextView
                               android:gravity="center"
                               android:id="@+id/bulding_nb"

                               android:fontFamily="@font/saudi"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="end"

                               android:text="00"
                               android:textColor="@color/bk_red"
                               android:paddingBottom="3dp"
                               android:textSize="14dp" />
                           <TextView
                               android:gravity="center"


                               android:fontFamily="@font/saudi"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="end"


                               android:text=" m2"
                               android:textColor="@color/bk_red"
                               android:paddingBottom="3dp"
                               android:textSize="14dp" />
                           <SeekBar
                               android:id="@+id/seek_bar_bulding"
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:paddingLeft="0dp"
                               android:max="1000"

                               android:paddingRight="0dp"/>



                       </LinearLayout>

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView

                       android:fontFamily="@font/saudi"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="end"

                       android:text="@string/price"
                       android:textColor="@color/text_grey"
                       android:textSize="14dp" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal"
                       >
                       <TextView
                       android:gravity="center"
                       android:id="@+id/price_nb"

                       android:fontFamily="@font/saudi"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="end"


                       android:text="00"
                       android:textColor="@color/bk_red"
                       android:paddingBottom="3dp"
                       android:textSize="14dp" />
                       <TextView
                           android:gravity="center"


                           android:fontFamily="@font/saudi"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_gravity="end"


                           android:text=" €"
                           android:textColor="@color/bk_red"
                           android:paddingBottom="3dp"
                           android:textSize="14dp" />
                       <SeekBar
                           android:max="1000"
                           android:id="@+id/seek_bar_price"
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:paddingLeft="0dp"
                           android:paddingRight="0dp"/>



                   </LinearLayout>

               </LinearLayout>
               <LinearLayout
                   android:id="@+id/type_lay"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="right"

                   >
                   <Button

                       android:layout_marginRight="10dp"
                       android:layout_width="150dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/type1"
                       android:text="@string/type1"
                       android:textColor="@color/bk_white"
                       android:fontFamily="@font/saudi"
                       android:textSize="14dp"
                       android:background="@drawable/bk_type_btn2"/>
                   <Button

                       android:layout_width="150dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/type2"
                       android:text="@string/type2"
                       android:textColor="@color/bk_green"
                       android:fontFamily="@font/saudi"
                       android:textSize="14dp"
                       android:background="@drawable/bk_type_btn"/>
               </LinearLayout>


           </LinearLayout>
           <CheckBox
android:visibility="gone"
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/is_solde"
               android:text=" "
               android:textSize="14dp"
               android:textColor="@color/bk_red"
               android:layout_gravity="right"
               android:layoutDirection="rtl"
               android:fontFamily="@font/saudi"
               android:textStyle="bold"
               android:drawableLeft="@drawable/sold"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/info"/>
           <LinearLayout
               android:id="@+id/imgs"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3"

               app:layout_constraintTop_toBottomOf="@+id/is_solde">

               <Button
                   android:layout_marginRight="3dp"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/take_img1"
                   android:layout_height="100dp"
                   android:paddingBottom="20dp"
                   android:background="@drawable/bk_btn_take_img"
                   android:text="@string/take_img"
                   android:fontFamily="@font/saudi"
                   android:textSize="14dp"
                   android:textColor="@color/text_grey"
                   android:drawableBottom="@drawable/ic_camera"/>
               <Button
                   android:layout_marginRight="3dp"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/take_img2"
                   android:layout_height="100dp"
                   android:paddingBottom="20dp"
                   android:background="@drawable/bk_btn_take_img"
                   android:text="@string/take_img"
                   android:fontFamily="@font/saudi"
                   android:textSize="14dp"
                   android:textColor="@color/text_grey"
                   android:drawableBottom="@drawable/ic_camera"/>
               <Button
                   android:layout_marginRight="3dp"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/take_img3"
                   android:layout_height="100dp"
                   android:paddingBottom="20dp"
                   android:background="@drawable/bk_btn_take_img"
                   android:text="@string/take_img"
                   android:fontFamily="@font/saudi"
                   android:textSize="14dp"
                   android:textColor="@color/text_grey"
                   android:drawableBottom="@drawable/ic_camera"/>
           </LinearLayout>
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_marginTop="20dp"
               app:layout_constraintTop_toBottomOf="@+id/imgs"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               >

               <EditText
                   android:id="@+id/youtup"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:background="@drawable/bk_edite_bay"
                   android:fontFamily="@font/saudi"
                   android:hint="@string/youtup"
                   android:paddingRight="10dp"
                   android:textColor="@color/text_grey"

                   android:textSize="14dp"
                   app:layout_constraintTop_toTopOf="parent"
                   tools:layout_editor_absoluteX="20dp" />
               <TextView
                   android:layout_marginTop="5dp"
                   android:id="@+id/city"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@+id/youtup"
                   android:fontFamily="@font/saudi"
              android:gravity="left"
                   android:drawableLeft="@drawable/ic_location"
                   android:text="تسليتش"
                   android:paddingLeft="10dp"
                   android:textColor="@color/text_grey"

                   android:textSize="14dp"

                  />
               <fragment
                   android:layout_marginTop="10dp"

                   app:layout_constraintTop_toBottomOf="@+id/city"
                   android:background="@drawable/bk_type_btn"
                   android:padding="3dp"
                   xmlns:android="http://schemas.android.com/apk/res/android"
                   xmlns:tools="http://schemas.android.com/tools"
                   android:name="com.google.android.gms.maps.SupportMapFragment"


                   android:layout_width="match_parent"
                   android:layout_height="500dp"

                   android:id="@+id/map"

                   />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="@id/map"
    android:id="@+id/zoom"
    android:layout_marginTop="10dp"

    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingBottom="10dp">
    <Button

        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:id="@+id/zomin"

        android:textColor="@color/bk_white"
        android:fontFamily="@font/saudi"
        android:textSize="14dp"
        android:background="@drawable/bk_type_btn2"
        android:drawableTop="@drawable/ic_plase"
        android:gravity="center"
        android:paddingTop="5dp"/>
    <Button

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:id="@+id/zomout"

        android:textColor="@color/bk_green"
        android:fontFamily="@font/saudi"
        android:textSize="14dp"
        android:background="@drawable/bk_type_btn"

        android:drawableTop="@drawable/ic_munis"
        android:gravity="center"
        android:paddingTop="5dp"/>
</LinearLayout>

               <TextView
                   android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/zoom"
                   android:layout_width="match_parent"
                android:gravity="center"

                   android:layout_height="wrap_content"
                   android:text="@string/map"
                   android:textColor="@color/text_grey"
                   android:fontFamily="@font/saudi"
                   android:textSize="14dp"
                   android:id="@+id/t1"/>

               <LinearLayout

                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layoutDirection="rtl"
                   app:layout_constraintTop_toBottomOf="@+id/t1"
                   android:weightSum="2"
                   android:gravity="center">


                   <Button
                       android:paddingRight="10dp"

                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:background="@drawable/bk_type_btn"
                       android:layout_height="wrap_content"
                       android:text="@string/save"
                       android:textColor="@color/text_grey"
                       android:fontFamily="@font/saudi"
                       android:textSize="14dp"
                       android:id="@+id/save"/>
               </LinearLayout>

           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>