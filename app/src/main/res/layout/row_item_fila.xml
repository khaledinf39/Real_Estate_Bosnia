<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<androidx.cardview.widget.CardView
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="15dp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img"
        android:scaleType="fitXY"
        android:id="@+id/img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/nb"
        android:text="100"
        android:fontFamily="@font/saudi"
        android:textSize="14dp"
        android:textColor="@color/bk_red"
        android:background="@drawable/ic_bk_nb"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"/>
</androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="match_parent"
            android:src="@drawable/sold"
            android:scaleType="centerInside"

            android:id="@+id/is_solde"/>
        <LinearLayout
            android:id="@+id/room_lay"
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="02"
                android:fontFamily="@font/saudi"
                android:textSize="14dp"
android:id="@+id/room_nb"
                android:textColor="@color/text_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/room"
                android:fontFamily="@font/saudi"
                android:textSize="14dp"

                android:textColor="@color/text_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
android:layout_marginRight="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="."
                android:fontFamily="@font/saudi"
                android:textSize="30dp"

                android:textColor="@color/text_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="03"
                android:fontFamily="@font/saudi"
                android:textSize="14dp"
android:id="@+id/bath_nb"
                android:textColor="@color/text_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/bath"
                android:fontFamily="@font/saudi"
                android:textSize="14dp"

                android:textColor="@color/text_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintLeft_toLeftOf="parent"
                android:text="."
                android:fontFamily="@font/saudi"
                android:textSize="30dp"

                android:textColor="@color/text_grey"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bulding_lay"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/room_lay">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="100"
                android:fontFamily="@font/saudi"
                android:textSize="14dp"
android:id="@+id/bulding_nb"
                android:textColor="@color/text_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/bulding"
                android:fontFamily="@font/saudi"
                android:textSize="14dp"

                android:textColor="@color/text_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="."
                android:fontFamily="@font/saudi"
                android:textSize="30dp"

                android:textColor="@color/text_grey"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/earth_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintRight_toLeftOf="@+id/bulding_lay"
            app:layout_constraintTop_toBottomOf="@+id/room_lay">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="100"
                android:fontFamily="@font/saudi"
                android:textSize="14dp"
                android:id="@+id/earth_nb"
                android:textColor="@color/text_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/earth"
                android:fontFamily="@font/saudi"
                android:textSize="14dp"
                android:id="@+id/earth_txt"
                android:textColor="@color/text_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="."
                android:fontFamily="@font/saudi"
                android:textSize="30dp"

                android:textColor="@color/text_grey"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="â‚¬4,999"
            android:fontFamily="@font/saudi"
            android:textSize="16dp"
android:id="@+id/price_nb"
            android:textColor="@color/bk_red"
            />
<ImageView
    android:visibility="gone"

    android:layout_width="20dp"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_to"
    android:layout_marginBottom="10dp"
    android:id="@+id/to"
    app:layout_constraintLeft_toRightOf="@+id/price_nb"
    app:layout_constraintBottom_toBottomOf="@+id/price_nb"/>

        <TextView
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="15dp"
            app:layout_constraintLeft_toRightOf="@+id/to"
            android:text="â‚¬4,999"
            android:fontFamily="@font/saudi"
            android:textSize="16dp"
            android:id="@+id/price_nb1"
            android:textColor="@color/bk_red"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/earth_lay"
        android:id="@+id/place"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/place"
        android:fontFamily="@font/saudi"
        android:textSize="14dp"
        android:drawableLeft="@drawable/ic_location"
        android:textColor="@color/text_grey"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>